        // 4 D's detailed explanations
        const dDetails = {
            delete: {
                title: "üóëÔ∏è DELETE: Not Actionable, No Value",
                content: `
                    <h4>When to DELETE:</h4>
                    <ul>
                        <li><strong>Spam and junk:</strong> Obvious promotional emails you didn't request</li>
                        <li><strong>FYI emails:</strong> Information that requires no action or response</li>
                        <li><strong>Outdated information:</strong> Old newsletters, expired announcements</li>
                        <li><strong>Duplicate emails:</strong> CC'd on something already handled</li>
                        <li><strong>Social media notifications:</strong> LinkedIn updates, Facebook notifications</li>
                    </ul>
                    <h4>üí° Pro Tip:</h4>
                    <p>When in doubt, ask: "Will I ever need to reference this again?" If no, delete it. Digital storage isn't free‚Äîit costs mental energy to maintain.</p>
                    <h4>Example:</h4>
                    <p><em>"Weekly newsletter from a service I no longer use"</em> ‚Üí DELETE</p>
                `
            },
            do: {
                title: "‚ö° DO: Less Than 2 Minutes",
                content: `
                    <h4>When to DO immediately:</h4>
                    <ul>
                        <li><strong>Quick responses:</strong> Yes/no answers, brief confirmations</li>
                        <li><strong>Simple forwards:</strong> Sending to the right person with a note</li>
                        <li><strong>Calendar additions:</strong> Adding meetings or appointments</li>
                        <li><strong>Quick approvals:</strong> Expense reports, time-off requests</li>
                        <li><strong>Brief status updates:</strong> "Project is on track" type responses</li>
                    </ul>
                    <h4>üí° Pro Tip:</h4>
                    <p>If you find yourself spending more than 2 minutes, STOP. Flag it for later processing. The 2-minute rule prevents processing sessions from derailing.</p>
                    <h4>Example:</h4>
                    <p><em>"Can we move our meeting from 2 PM to 3 PM tomorrow?"</em> ‚Üí DO (Quick calendar change)</p>
                `
            },
            delegate: {
                title: "üë• DELEGATE: Someone Else Should Handle",
                content: `
                    <h4>When to DELEGATE:</h4>
                    <ul>
                        <li><strong>Outside your expertise:</strong> Technical issues for IT, legal questions for lawyers</li>
                        <li><strong>Someone else's responsibility:</strong> Direct reports' decisions, other departments' tasks</li>
                        <li><strong>Development opportunities:</strong> Tasks that would help team members grow</li>
                        <li><strong>Lower-value activities:</strong> Administrative tasks that others can handle</li>
                        <li><strong>Information requests:</strong> Questions better answered by the source</li>
                    </ul>
                    <h4>üí° Pro Tip:</h4>
                    <p>When delegating, be specific about what you need and when. Forward with clear instructions and add to your @Waiting list to follow up.</p>
                    <h4>Example:</h4>
                    <p><em>"Technical error in the database system"</em> ‚Üí DELEGATE to IT team</p>
                `
            },
            defer: {
                title: "üìÖ DEFER: Important but Takes Time",
                content: `
                    <h4>When to DEFER:</h4>
                    <ul>
                        <li><strong>Project-related work:</strong> Tasks requiring focused time and attention</li>
                        <li><strong>Important decisions:</strong> Choices that need careful consideration</li>
                        <li><strong>Creative tasks:</strong> Writing, planning, strategizing</li>
                        <li><strong>Learning activities:</strong> Reading reports, watching training videos</li>
                    </ul>
                    <h4>üí° Pro Tip:</h4>
                    <p>Flag deferred emails and categorize them by context (@Computer, @Calls) or project. Set due dates for items with deadlines.</p>
                    <h4>Example:</h4>
                    <p><em>"Please review this 20-page strategic plan and provide detailed feedback"</em> ‚Üí DEFER (Flag for focused work time)</p>
                `
            }
        };

        // Update slide counter and progress
        function updateProgress() {
            document.getElementById('currentSlide').textContent = currentSlideIndex + 1;
            document.getElementById('totalSlides').textContent = totalSlides;
            document.getElementById('progressFill').style.width = ((currentSlideIndex + 1) / totalSlides * 100) + '%';
            
            // Update navigation buttons
            document.getElementById('prevBtn').disabled = currentSlideIndex === 0;
            document.getElementById('nextBtn').textContent = currentSlideIndex === totalSlides - 1 ? 'Complete Module' : 'Next ‚Üí';
        }

        function showSlide(index) {
            // Hide all slides
            const slides = document.querySelectorAll('.slide');
            slides.forEach(slide => slide.classList.remove('active'));
            
            // Show current slide
            document.getElementById(`slide${index + 1}`).classList.add('active');
            
            updateProgress();
        }

        function nextSlide() {
            if (currentSlideIndex < totalSlides - 1) {
                currentSlideIndex++;
                showSlide(currentSlideIndex);
            } else {
                completeModule();
            }
        }

        function previousSlide() {
            if (currentSlideIndex > 0) {
                currentSlideIndex--;
                showSlide(currentSlideIndex);
            }
        }

        // Show 4 D's details
        function showDDetails(dType) {
            // Remove active class from all D options
            document.querySelectorAll('.d-option').forEach(option => option.classList.remove('selected'));
            
            // Add active class to selected option
            event.target.closest('.d-option').classList.add('selected');
            
            // Show details
            const detailsDiv = document.getElementById('dDetails');
            const details = dDetails[dType];
            
            detailsDiv.innerHTML = `
                <h3>${details.title}</h3>
                ${details.content}
            `;
            
            detailsDiv.classList.add('active');
        }

        // Initialize email simulator
        function initializeEmailSimulator() {
            const emailList = document.getElementById('emailList');
            if (!emailList) return;
            
            emailList.innerHTML = '';
            
            sampleEmails.forEach((email, index) => {
                const emailDiv = document.createElement('div');
                emailDiv.className = 'email-item';
                emailDiv.onclick = () => selectEmail(index);
                
                emailDiv.innerHTML = `
                    <div class="email-priority priority-${email.priority}"></div>
                    <div class="email-content">
                        <div class="email-from">${email.from}</div>
                        <div class="email-subject">${email.subject}</div>
                        <div class="email-preview">${email.preview}</div>
                    </div>
                    <div class="email-time">${email.time}</div>
                `;
                
                emailList.appendChild(emailDiv);
            });
            
            // Reset processing panel
            document.getElementById('currentEmailSubject').textContent = 'Select an email to process';
            document.getElementById('currentEmailContent').textContent = 'Click on an email above to see its content and processing options.';
            document.getElementById('processingOptions').style.display = 'none';
            document.getElementById('processingFeedback').classList.add('hidden');
            
            updateProcessingStats();
        }

        // Select email for processing
        function selectEmail(index) {
            currentEmailIndex = index;
            const email = sampleEmails[index];
            
            // Update processing panel
            document.getElementById('currentEmailSubject').textContent = email.subject;
            document.getElementById('currentEmailContent').innerHTML = `
                <p><strong>From:</strong> ${email.from}</p>
                <p><strong>Preview:</strong> ${email.preview}</p>
                <p><strong>Received:</strong> ${email.time}</p>
                <p style="margin-top: 15px;">How would you process this email using the 4 D's?</p>
            `;
            
            // Show processing options
            document.getElementById('processingOptions').style.display = 'grid';
            
            // Highlight selected email
            document.querySelectorAll('.email-item').forEach((item, i) => {
                item.classList.remove('processing');
                if (i === index) {
                    item.classList.add('processing');
                }
            });
        }

        // Process selected email
        function processEmail(action) {
            if (currentEmailIndex === -1) return;
            
            const email = sampleEmails[currentEmailIndex];
            const emailElement = document.querySelectorAll('.email-item')[currentEmailIndex];
            const feedbackDiv = document.getElementById('processingFeedback');
            
            // Check if action is correct
            const isCorrect = action === email.correctAction;
            
            // Update email appearance
            emailElement.classList.remove('processing');
            emailElement.classList.add(action === 'delete' ? 'deleted' : 'completed');
            
            // Update stats
            if (action === 'delete') {
                processingStats.deleted++;
            } else if (action === 'do') {
                processingStats.completed++;
            } else {
                processingStats.flagged++;
            }
            processingStats.remaining--;
            
            // Show feedback
            feedbackDiv.innerHTML = `
                <div style="background: ${isCorrect ? '#f0fdf4' : '#fef3c7'}; color: ${isCorrect ? '#065f46' : '#92400e'}; padding: 15px; border-radius: 8px; margin-top: 15px;">
                    <h4>${isCorrect ? '‚úÖ Correct!' : 'üí° Learning Opportunity'}</h4>
                    <p><strong>Your choice:</strong> ${action.toUpperCase()}</p>
                    <p><strong>Recommended:</strong> ${email.correctAction.toUpperCase()}</p>
                    <p><strong>Explanation:</strong> ${email.explanation}</p>
                    ${!isCorrect ? '<p><em>Don\'t worry! Processing gets easier with practice.</em></p>' : ''}
                </div>
            `;
            feedbackDiv.classList.remove('hidden');
            
            // Update stats display
            updateProcessingStats();
            
            // Reset selection
            currentEmailIndex = -1;
            document.getElementById('processingOptions').style.display = 'none';
            
            // Check if inbox is complete
            if (processingStats.remaining === 0) {
                showInboxZeroSuccess();
            }
        }

        // Update processing stats display
        function updateProcessingStats() {
            document.getElementById('deletedCount').textContent = processingStats.deleted;
            document.getElementById('completedCount').textContent = processingStats.completed;
            document.getElementById('flaggedCount').textContent = processingStats.flagged;
            document.getElementById('remainingCount').textContent = processingStats.remaining;
            document.getElementById('inboxCount').textContent = `${processingStats.remaining} emails`;
        }

        // Show inbox zero success
        function showInboxZeroSuccess() {
            const feedbackDiv = document.getElementById('processingFeedback');
            feedbackDiv.innerHTML = `
                <div style="background: linear-gradient(135deg, #10b981, #059669); color: white; padding: 25px; border-radius: 15px; margin-top: 15px; text-align: center;">
                    <h3>üéâ Inbox Zero Achieved!</h3>
                    <p style="font-size: 1.1em; margin: 15px 0;">Congratulations! You've successfully processed all emails. Notice how good it feels to have an empty inbox and know that everything has been consciously decided upon.</p>
                    <p><strong>Pro Tip:</strong> This feeling of control and clarity is what you'll experience every day with consistent GTD processing!</p>
                </div>
            `;
        }

        // Reset simulator
        function resetSimulator() {
            processingStats = { deleted: 0, completed: 0, flagged: 0, remaining: 15 };
            currentEmailIndex = -1;
            initializeEmailSimulator();
            document.getElementById('processingFeedback').classList.add('hidden');
            document.getElementById('processingOptions').style.display = 'none';
            document.getElementById('currentEmailSubject').textContent = 'Select an email to process';
            document.getElementById('currentEmailContent').textContent = 'Click on an email above to see its content and processing options.';
        }

        // Show processing tips
        function showProcessingTips() {
            const feedbackDiv = document.getElementById('processingFeedback');
            feedbackDiv.innerHTML = `
                <div style="background: #f0f9ff; color: #1e40af; padding: 20px; border-radius: 10px; margin-top: 15px;">
                    <h4>üéØ Processing Tips</h4>
                    <ul style="margin: 10px 0;">
                        <li><strong>Delete liberally:</strong> If you wouldn't actively look for this email later, delete it</li>
                        <li><strong>Use the 2-minute rule:</strong> If unsure, time yourself doing the action</li>
                        <li><strong>Delegate with context:</strong> Always add a note when forwarding</li>
                        <li><strong>Defer with specifics:</strong> Flag with categories and due dates</li>
                        <li><strong>Trust your decisions:</strong> Any decision is better than no decision</li>
                        <li><strong>Practice makes perfect:</strong> The more you practice, the faster decisions become</li>
                    </ul>
                    <p style="margin-top: 15px;"><strong>Remember:</strong> Click on an email above, then use the action buttons to process it!</p>
                </div>
            `;
            feedbackDiv.classList.remove('hidden');
        }

        // Timer functions
        function startTimer() {
            if (timerInterval) return; // Already running
            
            timerInterval = setInterval(() => {
                timeRemaining--;
                updateTimerDisplay();
                
                if (timeRemaining <= 0) {
                    endTimerSession();
                }
            }, 1000);
            
            document.getElementById('timerStatus').textContent = 'Processing session in progress...';
        }

        function pauseTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
                document.getElementById('timerStatus').textContent = 'Session paused - click Start to continue';
            }
        }

        function resetTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }
            timeRemaining = 1200; // Reset to 20 minutes
            updateTimerDisplay();
            document.getElementById('timerStatus').textContent = 'Ready to start your processing session';
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            document.getElementById('timerDisplay').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        function endTimerSession() {
            clearInterval(timerInterval);
            timerInterval = null;
            document.getElementById('timerStatus').innerHTML = 
                '<span style="color: #10b981; font-weight: bold;">üéâ Session Complete! Time for a break.</span>';
        }

        // Toggle step completion
        function toggleStep(stepElement) {
            stepElement.classList.toggle('completed');
        }

        // Set confidence level
        function setConfidence(level) {
            confidenceLevel = level;
            
            // Update button styles
            const buttons = document.querySelectorAll('button[onclick^="setConfidence"]');
            buttons.forEach((btn, index) => {
                if (index + 1 === level) {
                    btn.style.background = '#e85a8a';
                    btn.style.color = 'white';
                    btn.classList.remove('btn-secondary');
                    btn.classList.add('btn');
                } else {
                    btn.style.background = '#718096';
                    btn.style.color = 'white';
                    btn.classList.remove('btn');
                    btn.classList.add('btn-secondary');
                }
            });
            
            // Show feedback
            const feedback = document.getElementById('confidenceFeedback');
            let message = '';
            
            if (level <= 4) {
                message = `
                    <div style="background: #fef3c7; color: #92400e; padding: 15px; border-radius: 8px; margin-top: 15px;">
                        <strong>üìö Build Your Confidence (${level}/10)</strong>
                        <p>Try the email simulator above a few more times, or start with just 10-minute processing sessions. Confidence comes with practice!</p>
                    </div>
                `;
            } else if (level <= 7) {
                message = `
                    <div style="background: #dbeafe; color: #1e40af; padding: 15px; border-radius: 8px; margin-top: 15px;">
                        <strong>üëç Good Confidence (${level}/10)</strong>
                        <p>You're ready to start! Begin with shorter sessions and focus on building the daily habit before optimizing your system.</p>
                    </div>
                `;
            } else {
                message = `
                    <div style="background: #d1fae5; color: #065f46; padding: 15px; border-radius: 8px; margin-top: 15px;">
                        <strong>üöÄ High Confidence (${level}/10)</strong>
                        <p>Excellent! You're ready to achieve inbox zero. Start tomorrow morning and you'll be amazed at the results.</p>
                    </div>
                `;
            }
            
            feedback.innerHTML = message;
            feedback.classList.remove('hidden');
        }

        // Module completion
        function completeModule() {
            // Collect user data for personalization
            const userData = {
                simulatorCompleted: processingStats.remaining === 0,
                processingStats: {...processingStats},
                confidenceLevel: confidenceLevel,
                inboxZeroCommitment: document.getElementById('inboxZeroCommitment')?.value || '',
                completionTime: new Date().toISOString()
            };
            
            // Store in memory for course personalization
            window.moduleData = window.moduleData || {};
            window.moduleData.module2_1 = userData;
            
            // Show completion message
            let message = `üéâ Module 2.1 Complete!\n\nInbox Zero Mastery Achieved!\n\n`;
            message += `Your Simulator Results:\n`;
            message += `‚Ä¢ Emails Processed: ${15 - processingStats.remaining}/15\n`;
            message += `‚Ä¢ Deleted: ${processingStats.deleted}\n`;
            message += `‚Ä¢ Completed: ${processingStats.completed}\n`;
            message += `‚Ä¢ Flagged: ${processingStats.flagged}\n`;
            if (confidenceLevel) {
                message += `‚Ä¢ Confidence Level: ${confidenceLevel}/10\n`;
            }
            message += `\nüöÄ Ready for Module 2.2: Email Rules and Automation\n\nTime to automate your email workflow!`;
            
            alert(message);
            
            // In a real LMS, this would navigate to the next module
            console.log('User data collected:', userData);
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                e.preventDefault();
                nextSlide();
            } else if (e.key === 'ArrowLeft') {
                e.preventDefault();
                previousSlide();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            
            // Hide simulator controls initially (will show on slide 4)
            const simulatorControls = document.getElementById('simulatorControls');
            if (simulatorControls) {
                simulatorControls.style.display = 'none';
            }
            
            // If starting on slide 4 for some reason, initialize
            if (currentSlideIndex === 3) {
                setTimeout(initializeEmailSimulator, 100);
                if (simulatorControls) {
                    simulatorControls.style.display = 'block';
                }
            }
        });

        // Initialize email simulator when slide 4 is shown
        function showSlide(index) {
            // Hide all slides
            const slides = document.querySelectorAll('.slide');
            slides.forEach(slide => slide.classList.remove('active'));
            
            // Show current slide
            document.getElementById(`slide${index + 1}`).classList.add('active');
            
            // Show/hide simulator controls only on slide 4 (index 3)
            const simulatorControls = document.getElementById('simulatorControls');
            if (simulatorControls) {
                if (index === 3) {
                    simulatorControls.style.display = 'block';
                    // Initialize email simulator when showing slide 4
                    setTimeout(initializeEmailSimulator, 100);
                } else {
                    simulatorControls.style.display = 'none';
                }
            }
            
            updateProgress();
        }

        // Auto-save user inputs
        function autoSave() {
            const commitmentTextarea = document.getElementById('inboxZeroCommitment');
            
            if (commitmentTextarea) {
                commitmentTextarea.addEventListener('input', function() {
                    // Auto-save to local storage would go here in a real system
                    console.log('Auto-saving inbox zero commitment...');
                });
            }
        }

        // Initialize auto-save
        document.addEventListener('DOMContentLoaded', function() {
            autoSave();
        });
    </script>
</body>
